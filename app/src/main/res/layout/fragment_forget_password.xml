<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    tools:context=".ForgetPasswordFragment"
    android:orientation="vertical">

    <ViewStub
        android:id="@+id/forget_password_username"
        android:inflatedId="@+id/usernameView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout="@layout/reset_password_username_layout" />

    <ViewStub
        android:id="@+id/forget_password_security_question"
        android:inflatedId="@+id/forgetPasswordSecurityQuestionView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout="@layout/reset_password_security_question_layout" />

    <ViewStub
        android:id="@+id/forget_password_reset_password"
        android:inflatedId="@+id/forgetPasswordResetPasswordView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout="@layout/reset_password_layout" />



</LinearLayout>