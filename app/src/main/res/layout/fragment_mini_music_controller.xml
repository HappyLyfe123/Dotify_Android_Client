<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:onClick="fullMusicScreenClicked"
    tools:context=".MiniMusicControllerFragment">


    <ImageButton
        android:id="@+id/mini_music_player_play_pause_image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:src="@drawable/mini_play_button_icon"
        android:background="@android:color/transparent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/mini_music_player_song_info_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="8dp"
        android:onClick="fullMusicScreenClicked"
        android:layout_centerInParent="true"/>

    <ImageButton
        android:id="@+id/mini_music_player_up_arrow_image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"
        android:src="@drawable/up_arrow_white"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:onClick="fullMusicScreenClicked"/>


</RelativeLayout>