<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Layouts.ResetPasswordUsernameLayout">

    <TextView
        android:id="@+id/reset_password_user_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:textSize="20sp"
        android:text="@string/username" />

    <EditText
        android:id="@+id/reset_password_user_name_edit_text"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:paddingStart="10dp"
        android:ems="10"
        android:inputType="textNoSuggestions|textVisiblePassword"
        android:background="@drawable/rounded_background"
        android:hint="@string/username"/>

    <Button
        android:id="@+id/forget_password_username_submit_button"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_gravity="center_horizontal"
        android:textSize="20sp"
        android:background="@drawable/rounder_button"
        android:textColor="@android:color/black"
        android:text="@string/submit" />

</LinearLayout>